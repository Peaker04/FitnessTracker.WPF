<Window x:Class="FitnessTracker.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:FitnessTracker.WPF.ViewModels"
        xmlns:views="clr-namespace:FitnessTracker.WPF.Views"
        mc:Ignorable="d"
        Title="{Binding HeaderTitle}" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <DataTemplate DataType="{x:Type viewmodels:DashboardViewModel}">
            <views:DashboardView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:WorkoutPlanViewModel}">
            <views:WorkoutPlanView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:WorkoutSessionViewModel}">
            <views:WorkoutSessionView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:ExerciseLibraryViewModel}">
            <views:ExerciseLibraryView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:StatisticsViewModel}">
            <views:StatisticsView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:SettingsViewModel}">
            <views:SettingsView/>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#2C3E50">
            <StackPanel Margin="10">
                <TextBlock Text="FITNESS TRACKER" Foreground="White" FontWeight="Bold" FontSize="20" Margin="10,20,10,30" HorizontalAlignment="Center"/>

                <Button Content="Dashboard" Command="{Binding NavigateCommand}" CommandParameter="Dashboard" Height="40" Margin="0,5"/>
                <Button Content="Kế Hoạch Tập" Command="{Binding NavigateCommand}" CommandParameter="WorkoutPlan" Height="40" Margin="0,5"/>
                <Button Content="Bắt Đầu Tập" Command="{Binding NavigateCommand}" CommandParameter="WorkoutSession" Height="40" Margin="0,5"/>
                <Button Content="Thư Viện Bài Tập" Command="{Binding NavigateCommand}" CommandParameter="ExerciseLibrary" Height="40" Margin="0,5"/>
                <Button Content="Thống Kê" Command="{Binding NavigateCommand}" CommandParameter="Statistics" Height="40" Margin="0,5"/>
                <Button Content="Cài Đặt" Command="{Binding NavigateCommand}" CommandParameter="Settings" Height="40" Margin="0,5"/>

                <Separator Margin="0,20" Background="Gray"/>
                <Button Content="Đăng Xuất" Command="{Binding LogoutCommand}" Background="#C0392B" Foreground="White" Height="40"/>
            </StackPanel>
        </Border>

        <Grid Grid.Column="1" Background="#F5F5F5">
            <ContentControl Content="{Binding CurrentView}" Margin="20"/>
        </Grid>
    </Grid>
</Window>